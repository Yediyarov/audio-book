
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/AudioBook/_LayoutAudioBook.cshtml";
}

<div id="login">
    <h1><a href="https://wordpress.org/" title="Powered by WordPress" tabindex="-1">Musik</a></h1>
    <p class="message">Please enter your username or email address. You will receive a link to create a new password via email.</p>

    <form name="lostpasswordform" id="lostpasswordform" action="http://flatfull.com/wp/musik/wp-login.php?action=lostpassword" method="post">
        <p>
            <label for="user_login">
                Username or Email Address<br>
                <input type="text" name="user_login" id="user_login" class="input" value="" size="20">
            </label>
        </p>
        <input type="hidden" name="redirect_to" value="">
        <p class="submit"><input type="submit" name="wp-submit" id="wp-submit" class="button button-primary button-large" value="Get New Password"></p>
    </form>

    <p id="nav">
        <a href="http://flatfull.com/wp/musik/login/">Log in</a>
        | <a href="http://flatfull.com/wp/musik/register/">Register</a>
    </p>

    <p id="backtoblog"><a href="http://flatfull.com/wp/musik/">← Back to Musik</a></p>

</div>

