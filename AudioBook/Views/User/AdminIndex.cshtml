@model IEnumerable<AudioBook.Models.User>
@{
    Layout = "~/Views/Admin/Shared/_LayoutAdmin.cshtml";
}
    <div>

        <table class="table">
            <tr>
                <th>
                    Img
                </th>
                <th>
                    Name
                </th>
                <th>
                    UserName
                </th>
                <th>
                    Email
                </th>
                <th>
                    Status
                </th>
                @if (Convert.ToUInt32(Session["adminRoleId"]) == 2)
                {
                    <th>
                        RoleId
                    </th>
                }


                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/Uploads/Users/@item.ImgSrc" alt="Alternate Text" />
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    @if (Convert.ToUInt32(Session["adminRoleId"]) == 2)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.RoleId)
                        </td>
                    }
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>

    </div>